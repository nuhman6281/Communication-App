{
  "name": "streamforge",
  "version": "0.1.0",
  "description": "Open-source WebRTC media server with AI capabilities - Better than Jitsi",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "webrtc",
    "video",
    "conferencing",
    "sfu",
    "mediasoup",
    "ai",
    "open-source"
  ],
  "author": "StreamForge Team",
  "license": "MIT",
  "dependencies": {
    "mediasoup": "^3.13.0",
    "socket.io": "^4.6.1",
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "bull": "^4.11.5",
    "winston": "^3.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "fluent-ffmpeg": "^2.1.2",
    "@tensorflow/tfjs-node": "^4.15.0",
    "sharp": "^0.33.1"
